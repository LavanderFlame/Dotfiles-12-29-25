{
    "layer": "bottom",
    "name": "topBar",
    "modules-left": [
        "custom/launcher",
        "hyprland/window",
        "wlr/taskbar",
        "hyprland/workspaces"
    ],
    "modules-center": [
        "clock",
        "group/settings"
    ],
    "modules-right": [
        "custom/wfRecording",
        "custom/cava",
        "mpris",
        "group/media",
        "group/volume",
        "bluetooth",
        "network",
        "custom/notification"
    ],
    //MODULES//
    "custom/settings": {
        "format": "Ó≠ë",
        "on-click": "resources",
        "tooltip-format": "Open options"
    },
    "custom/system": {
        "format": "Û∞≤∏",
        "on-click": "resources",
        "tooltip-format": "Open music options"
    },
    "custom/volIcon": {
        "format": "ÔÄ®",
        "on-click": "resources",
        "tooltip-format": "Open volume options"
    },
    "group/settings": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 300,
            "children-class": "not-memory",
            "transition-left-to-right": true
        },
        "modules": [
            "custom/settings",
            "custom/waypaper",
            "custom/wfRecorder",
            "custom/updates"
        ]
    },
       "custom/cava": {
        "exec": "~/.config/waybar/scripts/cava.sh"
    },

     "mpris": {
        "format": "{player_icon} {dynamic}",
        "format-paused": "<span color='grey'>{status_icon} {dynamic}</span>",
        "max-length": 50,
        "player-icons": {
            "default": "‚è∏",
            "mpv": "üéµ"
        },
        "status-icons": {
            "paused": "‚ñ∂"
        },
        // "ignored-players": ["firefox"]
    },

    // Check updates pacman or aur
  "custom/updates": {
    "format": "{}",
    "return-type": "json",
    "escape": true,
    "tooltip": true,
    "exec": "~/.config/waybar/scripts/check_updates.sh",
    "interval": 1800,
    "signal": 1,
    "hide-empty-text": true,
    "on-click": "~/.config/waybar/scripts/update_system.sh"
  },
    "group/media": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 300,
            "children-class": "not-memory",
            "transition-left-to-right": true
        },
        "modules": [
            "custom/system",
            "custom/previous",
            "custom/next"
        ]
    },
    "group/volume": {
        "orientation": "inherit",
        "drawer": {
            "transition-duration": 300,
        },
        "modules": [
            "custom/volIcon",
            "pulseaudio",
            "pulseaudio/slider"
        ]
    },
     "custom/wfRecording": {
        "exec": "exec ~/.config/waybar/scripts/record-screend",
        "exec-on-event": false,
        "on-click": "pkill -INT -P \"$(pgrep -xo record-screen)\" wf-recorder"
    },
      "custom/wfRecorder": {
        "format": "ÔÄΩ",
        "on-click": "~/.config/waybar/scripts/record-screen",
        "tooltip-format": "Record your screen!"
    },
    "custom/waypaper": {
        "format": "ÔÄæ",
        "on-click": "waypaper",
        "on-click-right": "waypaper --random",
        "tooltip-format": "Change wallpaper"
    },
    "custom/playpause": {
        "format": "Û∞êé",
        "on-click": "playerctl --player=%any,app.zen_browser.zen play",
        "on-click-right": "playerctl --all-players pause"
    },
    "custom/previous": {
        "format": "Û∞íÆ",
        "on-click": "playerctl --player=%any,app.zen_browser.zen previous"
    },
    "custom/next": {
        "format": "Û∞í≠",
        "on-click": "playerctl --player=%any,app.zen_browser.zen next"
    },
    "custom/launcher": {
        "format": "Ôåû",
        "on-click": "rofi -show drun"
    },
        "clock": {
      "format": "{:%I:%M %p}",
      "format-alt": "{:%A, %m-%d-%Y}",
      "on-click-right": "gnome-clocks",
      "tooltip": true,
      "tooltip-format": "<tt><small>{calendar}</small></tt>",
      "calendar": {
        "mode": "month",
        "mode-mon-col": 3,
        "on-scroll": 1,
        "format": {
          "months": "<span color='#FFFFFF'>{}</span>",
          "days": "<span color='#9c9c9c'>{}</span>",
          "weeks": "<span color='#9c9c9c'>W{}</span>",
          "weekdays": "<span color='#FFFFFF'>{}</span>",
          "today": "<span color='#FFFFFF'><b>{}</b></span>"
        }
      },
      "actions": {
        "on-click-middle": "mode",
        "on-scroll-up": "shift_down",
        "on-scroll-down": "shift_up"
      }
    },

    "hyprland/workspaces": {
        "on-scroll-up": "hyprctl dispatch workspace r-1",
        "on-scroll-down": "hyprctl dispatch workspace r+1",
        "on-click": "activate",
        "active-only": true,
        "format": "{}",
        "format-icons": {
            "urgent": "ÔÅ±",
            "active": "",
            "default": ""
        },
        "persistent-workspaces": {
            "*": 5
        },
        "all-outputs": true,
        "show-special": true
    },
    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 18,
        "tooltip-format": "{title}",
        "sort-by-app-id": false,
        "on-click": "activate",
        "on-click-middle": "close",
        "all-outputs": true,
        "ignore-list": [
            "alactritty",
            "kitty",
            "foot"
        ]
    },
    "network": {
        "format": "Û∞≤õ  Offline",
        "format-wifi": "Ôá´ ",
        "format-ethernet": "Û∞àÄ Û∞àÅ",
        "format-linked": "Û∞àÄ Û∞àÅ",
        "format-disconnected": "Û∞≤õ  Offline",
        "tooltip-format": "Û∞àÄ  {ifname} via {gwaddri}",
        "tooltip-format-wifi": "Ôá´   Connected \n\nIP: {ipaddr}\nStrength: {signalStrength}%\nUp: {bandwidthUpBits} Down: {bandwidthDownBits}",
        "tooltip-format-ethernet": "Û∞àÄ  {ifname}\n\nIP: {ipaddr}\nUp: {bandwidthUpBits} Down: {bandwidthDownBits}",
        "tooltip-format-disconnected": "Disconnected",
        "max-length": 50,
        "on-click": "nm-connection-editor",
        "on-click-right": "kitty nmtui"
    },

     "custom/sidebar": {
      "format": "Û±óº",
      "tooltip-format": "L: Sidebar\nR: Reload configuration (wait 5-10 seconds)",
      "on-click": "swaync-client -t",
      "on-click-right": "swaync-client -R && swaync-client -rs && sleep 1 && swaync-client -t"
    },

    "custom/notification": {
    "tooltip": true,
    "format": "<span size='16pt'>{icon}</span>",
    "format-icons": {
      "notification": "Û±Ö´",
      "none": "Û∞Çú",
      "dnd-notification": "Û∞Ç†",
      "dnd-none": "Û∞™ì",
      "inhibited-notification": "Û∞Çõ",
      "inhibited-none": "Û∞™ë",
      "dnd-inhibited-notification": "Û∞Çõ",
      "dnd-inhibited-none": "Û∞™ë"
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-middle": "swaync-client -R && swaync-client -rs && sleep 1 && swaync-client -t",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  },
    "bluetooth": {
        "format": "Ôäì",
        "format-disabled": "Ôäì Ôëß",
        "format-off": "Ôäì Off",
        "interval": 30,
        "on-click": "blueman-manager",
        "format-no-controller": "",
        "tooltip-format": "Ôäì {controller_alias}\n\n{num_connections} connected",
        "tooltip-format-connected": "Ôäì {controller_alias}\n\n{num_connections} connected",
        "tooltip-format-enumerate-connected": "Ôäì {device_alias}",
        "tooltip-format-enumerate-connected-battery": "Ôäì {device_alias}\t{device_battery_percentage}%"
    },
    "pulseaudio/slider": {
        "format": "{volume}%",
        "min": 0,
        "max": 100,
        "orientation": "horizontal",
        "format-muted": "Ó¨§ MUTE",
        "step": 5,
        "tooltip": false,
        "max-length": 100
    },
    // Audio
  "pulseaudio": {
    "scroll-step": 1,
    "format": "{icon} {volume: >3}%",
    "format-bluetooth": "{icon} {volume: >3}%",
    "format-muted": "ÔÄ¶ muted",
    "format-icons": {
      "headphones": "ÔÄ•",
      "handsfree": "ÔÄ•",
      "headset": "ÔÄ•",
      "phone": "ÔÇï",
      "portable": "ÔÇï",
      "car": "ÔÜπ",
      "default": ["ÔÄß", "ÔÄ®"]
    },
    "on-click": "pavucontrol",
    "on-scroll-up": "pamixer -ui 2 && pamixer --get-volume > $SWAYSOCK.wob",
    "on-scroll-down": "pamixer -ud 2 && pamixer --get-volume > $SWAYSOCK.wob"
  },
    "hyprland/window": {
        "max-length": 50,
        "orientation": "vertical",
        "separate-outputs": false,
        "rewrite": {
            "": "Ôçô  Hyprland",
            "~": "ÓØä   Terminal",
            "zsh": "ÓØä   Terminal",
            "class<kitty>": "ÓØä   Terminal",
            "VLC media player": "Û∞ïº   VLC Media Player",
            "(.*) - VLC media player": "Û∞ïº   VLC | $1",
            "(.*) - mpv": "ÔçÆ   MPV | $1",
            "Authenticate": "Û∞ªå   Authenticate",
            "‚Ä¢ Discord(.*)": "Discord$1",
            "(.*)Discord(.*)": "Ôáø   $1Discord$2"
        }
    },
    "cpu": {
        "rotate": 90,
        "format": "{usage}% Ó∞ô",
        "tooltip": true,
        "tooltip-format": "CPU use: {usage}%\nCores: {cores}"
    },
    "memory": {
        "rotate": 90,
        "format": "{}% Û∞çõ",
        "tooltip": true,
        "tooltip-format": "RAM in use: {used} / {total} ({percentage}%)"
    },
    "disk": {
        "format": "{percentage_free}% ÔÇ†",
        "tooltip": true,
        "tooltip-format": "Space free: {free} / {total} ({percentage_free}%)"
    },
    "temperature": {
        "rotate": 90,
        "format": "{temperatureC}¬∞C {icon}",
        "tooltip": true,
        "tooltip-format": "Actual temp: {temperatureC}¬∞C\nCr√≠tico si > 80¬∞C",
        "format-icons": [
            "Ôãâ"
        ]
    }
}